<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg_color"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/now_key_option_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/setting_item_bg_color"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/now_key_switcher_text"
            style="@style/settings_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/function_introduce" />

        <Switch
            android:id="@+id/sw_main_eagetouch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="15dp" />
    </RelativeLayout>
</LinearLayout>
