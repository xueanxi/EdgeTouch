<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="settings_text_content">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/setting_item_title_color</item>
    </style>


    <style name="main_title">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="main_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/setting_item_bg_color</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

</resources>
